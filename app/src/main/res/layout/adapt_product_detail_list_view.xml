<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ccardproducts"
        android:padding="10dp"
        app:cardElevation="2dp"
        android:layout_margin="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:cardUseCompatPadding="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/comparecontainer"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Compare"
                    />
                <in.prax.tamalproject.view.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NEW"
                    android:layout_weight="1"
                    android:textColor="@color/GRAPEFRUIT"
                    android:textAlignment="center"
                    />

            </LinearLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgProduct"
                android:layout_width="60dp"
                android:layout_below="@+id/comparecontainer"
                android:layout_marginRight="30dp"
android:layout_alignParentRight="true"
                android:layout_height="70dp"
                android:src="@drawable/product_image" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comparecontainer"
                android:layout_marginLeft="12dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/imgProduct"
                android:text="Anchor Fasteners"
                android:textSize="18sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtProductsDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@id/txtProducts"
                android:layout_toLeftOf="@+id/imgProduct"
                android:layout_marginTop="10dp"
                android:text="Ultimate-performance epoxy mortar for rebar connections and heavy anchoring"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>