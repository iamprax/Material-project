<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <in.prax.tamalproject.view.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRODUCT LINE"
                    android:textColor="@color/GRAPEFRUIT"
                    android:textSize="17sp" />


                <in.prax.tamalproject.view.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="HITZ"
                    android:textColor="@color/GRAPEFRUIT"
                    android:textSize="17sp" />

                <in.prax.tamalproject.view.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Ultimate-performance anchor rod for use with injection(CS)"
                    android:textColor="@color/GRAPEFRUIT"
                    android:textSize="15sp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/homecardSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="7dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    tools:targetApi="lollipop">

                    <ViewFlipper
                        android:id="@+id/vpBanner"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:overScrollMode="always"
                        android:scaleType="fitXY" />


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/techdata"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/features"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:scaleType="fitXY" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/application"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:scaleType="fitXY" />


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:padding="3dp"
                    android:text="Technical Application Video"
                    android:textColor="@color/GRAPEFRUIT"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="10dp"
                    android:src="@color/colorPrimary"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="5dp"

                    android:padding="3dp"
                    android:text="DOCUMENTS"
                    android:textColor="@color/GRAPEFRUIT"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/documents"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:visibility="gone"
                    android:scaleType="fitXY" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:padding="3dp"
                    android:text="Operating Instructions"
                    android:textColor="@color/GRAPEFRUIT"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:padding="3dp"
                    android:text="Demo Practical Video"
                    android:textColor="@color/GRAPEFRUIT"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:padding="3dp"
                    android:text="Warranty Instructions "
                    android:textColor="@color/GRAPEFRUIT"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="10dp"
                    android:src="@color/colorPrimary"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:padding="3dp"
                    android:text="Related Products"
                    android:textColor="@color/GRAPEFRUIT"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="10dp"
                    android:src="@color/colorPrimary"/>
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/relatedproducts"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:visibility="gone"
                    android:scaleType="fitXY" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:padding="3dp"
                    android:text="Request for live demo,Consult with Technical/Structural Engineer"
                    android:textColor="@color/GRAPEFRUIT"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="10dp"
                    android:src="@color/colorPrimary"/>
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/consult1"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/consult2"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnloginproductline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:text="Login to see your account prices and details"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="5dp"

                    android:padding="3dp"
                    android:text="Product And Selection Prices"
                    android:textColor="@color/GRAPEFRUIT"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <include layout="@layout/productselectionview" />


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/psp1"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/psp2"
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btnBuyNow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector"
                        android:text="Buy now"
                        android:textColor="@color/white" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btnAddtocart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector"
                        android:text="Add to cart"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>